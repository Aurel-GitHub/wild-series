<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Wild Series
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css"> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		</head>
		<body>
			<header>
				{% include "navbar.html.twig" %}
				{% for category, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ category }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
			</header>
			{% block body %}{% endblock %}
			<footer>
				{%  include "footer.html.twig" %}
			</footer>
		</body>
	</html>
