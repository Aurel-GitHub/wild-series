{% extends "base.html.twig" %}

{% block title %}Wild Series - Série
{% endblock %}

{% block body %}
	<h1>Film de Catégorie :
		{{ category_name.name }}</h1>
	{% for category in categories %}
		<br><div>
			<h2>{{ category.title }}
				- Série n°
				{{ category.id }}</h2>
			<p>{{ category.summary }}</p>
			<a href="{{ path("program_show", { id: category.id }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
