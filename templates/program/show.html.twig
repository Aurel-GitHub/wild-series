{% extends "base.html.twig" %}

{% block title %}Wild Series - Série n°{{program.id}}
{% endblock %}

{% block body %}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body" style="padding: 5%">
			<h1 class="mt-0">{{ program.title }} </h1>
              		{# <small><a href="{{ path('program') }}">Retour à la liste des programmes</a></small> #}

			<p>{{ program.summary }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>

			<strong>Liste des saisons disponibles</strong>
			{% for season in seasons %}
				<p>
					<a href="{{ path("program_season_show", { programId: season.programId.id , seasonId: season.id}) }}">Saison n°:{{ season.number}}
						-
						{{ season.year }}
					</a>
				</p>
			{% endfor %}
		</div>

	</div>

{% endblock %}
