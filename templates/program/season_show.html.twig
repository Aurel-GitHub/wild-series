{% extends "base.html.twig" %}

{% block title %}Wild Series - Saison n°: {{ season.number }}
{% endblock %}

{% block body %}

	<div class="media" style="padding: 5%">
		<div class="media-body">
			<h1 class="mt-0">Saison n°: {{ season.number }} - {{ season.year }}</h1>
              		<small><a href="{{ path("program_show", { id: program.id })  }}">Retour sur la fiche de {{ program.title }}</a></small><br>
			<div clas="text" style="padding-top: 2%"><strong>Description : </strong><p>{{ season.description }}</p></div>
		</div>
	</div>
	
    {% endblock %}
